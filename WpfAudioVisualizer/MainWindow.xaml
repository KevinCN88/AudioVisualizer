<Window x:Class="WpfAudioVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAudioVisualizer"
        mc:Ignorable="d" Background="Black"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <local:VisualizerControl x:Name="visualizerControl"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Toggle" Margin="10" Padding="10 5" Command="{Binding ToggleCommand}"/>
    </Grid>
</Window>
